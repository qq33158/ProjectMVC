@model Member
<h1>刪除成員</h1>

<form method="post">
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Id" class="p-0"></label>
            <input asp-for="Id" class="form-control" disabled />
        </div>
        <div class="col-md-4">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="col-md-4">
            <label asp-for="Mail" class="p-0"></label>
            <input asp-for="Mail" class="form-control" disabled />
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <button class="btn btn-danger border form-control" type="submit">刪除</button>
        </div>
        <div class="col-md-6">
            <a asp-controller="Member" asp-action="Index" class="btn btn-secondary border form-control">
                返回
            </a>
        </div>
    </div>
</form>
