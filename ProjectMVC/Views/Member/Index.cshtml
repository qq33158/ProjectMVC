@model List<Member>
<h1>成員清單</h1>
<div class="row">
    <div>
        <a asp-controller="Member" asp-action="Create" class="btn btn-primary border form-control">新增成員</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
    <table class="table table-striped table-bordered">
        <thead>
             <tr>
                <th>序號</th>
                <th>姓名</th>
                <th>Mail</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.OrderBy(u  => u.Id))
            {
         
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.Mail</td>
                        <td><div class="w-100 btn-group"><a asp-controller="Member" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info border form-control">編輯</a>
                                <a asp-controller="Member" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger border form-control">刪除</a>
                            </div>
                        </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>